SCTK_CHECK_FUNC atoll
SCTK_CHECK_FUNC strdup
SCTK_CHECK_FUNC strcmp
SCTK_CHECK_FUNC strcasecmp
SCTK_CHECK_FUNC strlen
SCTK_CHECK_FUNC getenv
SCTK_CHECK_FUNC perror
SCTK_CHECK_FUNC malloc
