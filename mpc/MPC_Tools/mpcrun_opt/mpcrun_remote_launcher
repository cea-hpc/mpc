echo "$0 $@"
MPCRUN_REMOTE_HOST="$1"
MPCRUN_REMOTE_DIR="$2"
ORIG_prefix="$3"

shift 3

cd $MPCRUN_REMOTE_DIR

cat ./MPC_USER_PACKAGE/bin/mpcrun | sed s,$ORIG_prefix,$MPCRUN_REMOTE_DIR/MPC_USER_PACKAGE,g >  ./MPC_USER_PACKAGE/bin/mpcrun_rebased

chmod 755 ./MPC_USER_PACKAGE/bin/mpcrun_rebased

if test "$LD_LIBRARY_PATH" != "" ; then 
LD_LIBRARY_PATH="$MPCRUN_REMOTE_DIR/MPC_USER_PACKAGE/lib:$LD_LIBRARY_PATH"
else
LD_LIBRARY_PATH="$MPCRUN_REMOTE_DIR/MPC_USER_PACKAGE/lib"
fi

export LD_LIBRARY_PATH

#ldd ./MPC_USER_PACKAGE/a.out

./MPC_USER_PACKAGE/bin/mpcrun_rebased $@
