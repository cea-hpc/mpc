SRCDIR=@srcdir@/

CC=@CC@
CFLAGS=@CFLAGS@ -I../include -I$(SRCDIR)/../include
LDFLAGS=@LDFLAGS@
AR=@AR@

all:../lib/libsctk_arch_timer.so

../lib/libsctk_arch_timer.so:$(SRCDIR)/timer.c
	$(CC) $(CFLAGS) $(SRCDIR)/timer.c -o timer.o -c
	mkdir -p ../lib
	$(CC) $(LDFLAGS) -fPIC -shared timer.o  -o ../lib/libsctk_arch_timer.so
