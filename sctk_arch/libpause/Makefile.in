SRCDIR=@srcdir@/

CC=@CC@
CFLAGS=@CFLAGS@ -I../include -I$(SRCDIR)/../include
LDFLAGS=@LDFLAGS@
AR=@AR@

all:../lib/libsctk_arch_pause.so

../lib/libsctk_arch_pause.so:$(SRCDIR)/pause.c
	$(CC) $(CFLAGS) $(SRCDIR)/pause.c -o pause.o -c
	mkdir -p ../lib
	$(CC) $(LDFLAGS) -fPIC -shared pause.o  -o ../lib/libsctk_arch_pause.so
	$(AR) rcu  ../lib/libsctk_arch_pause.a  pause.o
