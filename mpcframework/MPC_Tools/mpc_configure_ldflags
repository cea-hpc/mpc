begin_section Generate mpc_ldflags

mkdir -p bin

cat <<EOF > bin/mpc_ldflags
#!/bin/sh
EOF

header_sh >> bin/mpc_ldflags


cat <<EOF >> bin/mpc_ldflags

ROMIO=""

#Only use romio if it is intalled
#because we use the same compiler
#to build romio itself
if test -e "${SCTK_LIB_DIR}/libromio.a"; then
	#Here we make sure not to link romio during the
	#bootstrap at it would link ROMIO against ROMIO
	if test "x\${MPC_BOOTSTRAP}" != "xyes"; then
		ROMIO="-L${SCTK_LIB_DIR}/ -lromio"
	fi
fi

if test -e "${SCTK_LIB_DIR}/libmpcgetopt.a"; then
	if test "x\${MPC_BOOTSTRAP}" != "xyes"; then
		SCTK_GETOPT="-L${SCTK_LIB_DIR}/ -lmpcgetopt"
	fi
fi

if test -e "${SCTK_LIB_DIR}/libmpcmpisizeof.a"; then
	if test "x\${MPC_BOOTSTRAP}" != "xyes"; then
		SCTK_MPCMPISIZEOF="-L${SCTK_LIB_DIR}/ -lmpcmpisizeof"
	fi
fi

FLAGS="-Wl,-rpath,${SCTK_LIB_DIR} -Wl,-rpath,${SCTK_LIB_DIR}/../lib64 -lmpc_tdb_remote_static $SCTK_LDFLAGS \${ROMIO} \${SCTK_GETOPT} \${SCTK_MPCMPISIZEOF}"

if test "\$MPC_USE_INTEL_COMPILER" = "1"; then
MPC_DO_NOT_USE_GNU_LM="1"
fi 

if test "\$MPC_DO_NOT_USE_GNU_LM" = "1"; then
NEW_FLAGS=""
for i in \$FLAGS; do
if test "\$i" = "-lm" ; then
NEW_FLAGS="\$NEW_FLAGS"
else
NEW_FLAGS="\$NEW_FLAGS '\$i'"
fi
done
FLAGS="\$NEW_FLAGS"
fi

if test "\$1" != "fortran" ; then
echo "-L${SCTK_LIB_DIR} -lmpc_framework \$FLAGS"
else
echo "-L${SCTK_LIB_DIR} -lmpc_frameworkf \$FLAGS"
fi
EOF

chmod 755 bin/mpc_ldflags

end_section
