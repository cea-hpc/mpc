<mpc xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="mpc-config.xsd">
	<profiles>
		<profile>
			<name>default</name>
			<modules>
			</modules>
			<networks>
				<!-- net config contain complexe structures so default value cannot be setup into config-meta.xml -->
				<configs>
					<config>
						<name>ib_config_mpi</name>
						<driver>
							<infiniband>
								<network_type>1</network_type>
							</infiniband>
						</driver>
					</config>
						
					<config>
						<name>tcp_config_mpi</name>
						<driver>
							<tcp/>
						</driver>
					</config>
				         
				</configs>

				<rails>
					<rail>
						<name>ib_mpi</name>
						<device>0</device>
						<topology>ring</topology>
						<config>ib_config_mpi</config>
					</rail>
					<rail>
						<name>tcp_mpi</name>
						<priority>1</priority>
						<ondemand>1</ondemand>
						<device>0</device>
						<topology>fully</topology>
						<config>tcp_config_mpi</config>
					</rail>
					<rail>
						<name>tcp_large</name>
						<priority>10</priority>
						<device>0</device>
						<ondemand>1</ondemand>
						<topology>fully</topology>
						<config>tcp_config_mpi</config>
						<gates>
							<gate>
								<minsize>
									<value>32KB</value>
								</minsize>
							</gate>
						</gates>
					</rail>
				</rails>

				<cli_options>
					<cli_option>
						<name>ib</name>
						<rails>
							<rail>ib_mpi</rail>
							<rail>ib_mpi</rail>
						</rails>
					</cli_option>
					<cli_option>
						<name>tcp</name>
						<rails>
							<rail>tcp_mpi</rail>
						</rails>
					</cli_option>
					<cli_option>
						<name>multirail_tcp</name>
						<rails>
							<rail>tcp_large</rail>
							<rail>tcp_mpi</rail>
						</rails>
					</cli_option>
					<cli_option>
						<name>default</name>
						<rails>
							<rail>ib_mpi</rail>
						</rails>
					</cli_option>
				</cli_options>
			</networks>
		</profile>
	</profiles>
</mpc>
