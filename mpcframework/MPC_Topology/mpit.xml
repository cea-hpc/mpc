<cvars>
	<launcher>
			<cvar>
				<name>LN_VERBOSITY</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Default verbosity level from 0 to 3. Can be override by -vv on mpcrun.</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_BANNER</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Display the MPC banner at launch time to print some informations about the topology. Can be override by MPC_DISABLE_BANNER.</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_AUTOKILL</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Automatically kill the MPC processes after a given timeout. Use 0 to disable. Can be override by MPC_AUTO_KILL_TIMEOUT.</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_ADDR_RAND_DISABLE</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Deactivate randomization of base addresses.</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_DISABLE_MPC</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Do not use mpc for execution (deprecated?)</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_MPI_TASK</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Define the number of MPI tasks</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_MPC_PROCESS</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Define the number of MPC processes</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_MPC_VP</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Define the number of virtual processors</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_MPC_NODE</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Define the number of compute nodes</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_MAX_TOPO_TRY</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Define the max number of tries to access the topology file before failing</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_DISPLAY_VERS</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Print the MPC version number</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_ENABLE_SMT</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Enable usage of hyperthreaded cores if available on current architecture.</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_SHARE_NODE</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Enable the restriction on CPU number to share node</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_RESTART</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Restart MPC from a previous checkpoint</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_CHECKPOINT</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Enable MPC checkpointing</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_MIGRATION</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Enable migration</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
			<cvar>
				<name>LN_REPORT</name>
				<verbosity>MPI_T_VERBOSITY_TUNER_DETAIL</verbosity>
				<datatype>MPI_INT</datatype>
				<desc>Enable reporting.</desc>
				<bind>MPI_T_BIND_NO_OBJECT</bind>
				<scope>MPI_T_SCOPE_ALL_EQ</scope>
			</cvar>
	</launcher>		
</cvars>
