<?xml version="1.0"?>
<!DOCTYPE config SYSTEM "../MPC_Config/extra/config-meta.dtd">
<config>
	<usertypes>
		<enum name="net_layer_type" doc="Values used to select the network layer for Active Message">
			<value>ARPC_MPI</value>
			<value>ARPC_PTL</value>
		</enum>

		<struct name="arpc_type" doc="ARPC implementation for MPC">
			<param name="net_layer" type="net_layer_type" default="ARPC_MPI" doc="Net Layer for the run"/>
			<param name="nb_srv" type="int" default="1" doc="Default number of services to start during ARPC initialization"/>
		</struct>
	</usertypes>

	<modules>
		<module name="arpc" type="arpc_type"/>
	</modules>
</config>
