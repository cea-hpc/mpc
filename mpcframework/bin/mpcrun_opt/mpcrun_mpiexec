if [ "$LAUNCHER_CONFIG_JOB_MANAGER" = "SLURM" ]; then

	if test "$LAUNCHER_OPTION_LAUNCHER_OPTION_CPU_NB" = "0" ; then
		if test "$SLURM_CPUS_PER_TASK" != "" ; then
			LAUNCHER_OPTION_CPU_NB="$SLURM_CPUS_PER_TASK"
		else
			LAUNCHER_OPTION_CPU_NB=1
		fi
	fi

	if test "$LAUNCHER_CONFIG_LAUNCH_MODE" = "exec"; then
		LOCAL_LAUNCH_CMD=srun
	else
		LAUNCHER_OPTION_PROCESS_NB=$LAUNCHER_OPTION_NODE_NB
		LOCAL_LAUNCH_CMD=salloc
	fi

	LAUNCH_COMMAND="$LOCAL_LAUNCH_CMD $LAUNCH_OPTIONS --ntasks=$LAUNCHER_OPTION_PROCESS_NB \
			--nodes=$LAUNCHER_OPTION_NODE_NB --cpus-per-task=$LAUNCHER_OPTION_LAUNCHER_OPTION_CPU_NB \
			$LAUNCHER_OPTION_WRAPPER $LAUNCHER_OPTION_BINARY $LAUNCHER_OPTION_BINARY_ARGS $SCTK_ARGS"
else
	if test "$LAUNCHER_CONFIG_LAUNCH_MODE" = "alloc"; then
		LAUNCH_COMMAND="$LAUNCHER_OPTION_WRAPPER $LAUNCHER_OPTION_BINARY $LAUNCHER_OPTION_BINARY_ARGS $SCTK_ARGS"
	else
		LAUNCH_COMMAND="${LAUNCHER_CONFIG_MPIEXEC_HYDRA_PATH} $LAUNCH_OPTIONS -n $LAUNCHER_OPTION_PROCESS_NB $LAUNCHER_OPTION_WRAPPER $LAUNCHER_OPTION_BINARY $LAUNCHER_OPTION_BINARY_ARGS $SCTK_ARGS"
	fi
fi
