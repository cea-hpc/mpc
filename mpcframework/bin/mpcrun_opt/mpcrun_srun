#echo "$LAUNCH_COMMAND"
if [ "$LAUNCHER_CONFIG_JOB_MANAGER" = "SLURM" ]; then
	if test "$MPC_AUTO_KILL_TIMEOUT" = "0"  || test  -z "$MPC_AUTO_KILL_TIMEOUT"; then
		autokill_opt=""
	else
		autokill_opt="-t 0:${MPC_AUTO_KILL_TIMEOUT}"
	fi
	if test "$LAUNCHER_OPTION_LAUNCHER_OPTION_CPU_NB" = "0" ; then 
                if test "$SLURM_CPUS_PER_TASK" != "" ; then
                	LAUNCHER_OPTION_CPU_NB="$SLURM_CPUS_PER_TASK"
                else 
                    LAUNCHER_OPTION_CPU_NB=1
                fi
	fi
	LAUNCH_COMMAND="srun ${autokill_opt} $LAUNCH_OPTIONS --ntasks=$LAUNCHER_OPTION_PROCESS_NB --nodes=$LAUNCHER_OPTION_NODE_NB --cpus-per-task=$LAUNCHER_OPTION_LAUNCHER_OPTION_CPU_NB $LAUNCHER_OPTION_WRAPPER $LAUNCHER_OPTION_BINARY $LAUNCHER_OPTION_BINARY_ARGS $SCTK_ARGS"
else
	echo  "ERROR mpc is compiled without slurm support" 1>&2
	exit 1
fi
