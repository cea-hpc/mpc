# Supported thread engines
MODES_MULTITHREAD="pthread ethread_mxn pthread_ng ethread_mxn_ng ethread ethread_ng"


check_thread(){
	if test "$1" != "none" ; then
		for mode in $MODES_MULTITHREAD ; do
			if test "$1" = "$mode" ; then
				MPC_ARG_THREAD_TYPE="--thread=${1}"
				return
